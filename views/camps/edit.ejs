<h1>Edit camps </h1>

<form method="POST" action="/camps/update">
  <div>
    <label>Title</label>
    <input name="title" type="text" value="<%= camps.title %>" />
  </div>

  <div>
    <label>Content</label>
    <input name="content" type="text" value="<%= camps.content %>" />
  </div>

  <div>
    <label>Is Published</label>
    <input name="isPublished" type="text" value="<%= camps.isPublished %>" />
  </div>

  <div>
    <label>Total Words</label>
    <input name="totalWords" type="text" value="<%= camps.totalWords %>" />
  </div>

  <div>
    <label>Author</label>
    <input name="author" type="text" value="<%= camps.author %>" />
  </div>

  <input type="hidden" name="id" value="<%= camps._id %>" />

  <button type="submit">Update camps</button>

</form>