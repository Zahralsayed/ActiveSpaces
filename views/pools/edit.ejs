<h1>Edit pools </h1>

<form method="POST" action="/pools/update">
  <div>
    <label>Title</label>
    <input name="title" type="text" value="<%= pools.title %>" />
  </div>

  <div>
    <label>Content</label>
    <input name="content" type="text" value="<%= pools.content %>" />
  </div>

  <div>
    <label>Is Published</label>
    <input name="isPublished" type="text" value="<%= pools.isPublished %>" />
  </div>

  <div>
    <label>Total Words</label>
    <input name="totalWords" type="text" value="<%= pools.totalWords %>" />
  </div>

  <div>
    <label>Author</label>
    <input name="author" type="text" value="<%= pools.author %>" />
  </div>

  <input type="hidden" name="id" value="<%= pools._id %>" />

  <button type="submit">Update pools</button>

</form>